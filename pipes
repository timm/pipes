export BASH_SILENCE_DEPRECATION_WARNING=1
# pointer to this dir
HERE=$(git rev-parse --show-toplevel)

# command line tricks
alias ls="ls -G"
alias vi="vim -u $HERE/etc/dotvimrc "

py()  { python3 $1.py $* ; }
ccd() { cd $1; basename `pwd`; }

