# vim: ft=bash ts=2 sw=2 sts=2 et :
# for oython people, you only need these 3lines 
here="$(cd $( dirname "${BASH_SOURCE[0]}" ) && pwd )/.."
export PYTHONPATH="$here/src:$PYTHONPATH"
py()  { python3 $here/src/$1.py $* ; }

#                                                         _    _ 
#    _   ._   _|_  o   _   ._    _.  |     _  _|_       _|_  _|_ 
#   (_)  |_)   |_  |  (_)  | |  (_|  |    _>   |_  |_|   |    |  
